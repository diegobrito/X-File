source 'http://rubygems.org'

gem 'rails', '3.1.1'

group :development, :test do
	gem 'sqlite3'
  	gem 'haml-rails'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end


# HAML, Compass, 960gs and Markdown
gem 'haml', '>= 3.1.2'
gem 'compass', ">= 0.11.5"
gem 'compass-960-plugin'
gem 'BlueCloth'

# Authetication
gem 'devise'

# Authorization
gem "cancan"

# Upload Files
gem "paperclip", "~> 2.4"

# Pagination
gem "will_paginate", "~> 3.0"

# Javascript Framework
gem 'jquery-rails'

# Json
gem 'json'

# Deploy with Capistrano
gem 'capistrano'


# Gems para o ambiente de produção

group :production do
  gem 'mysql', '2.8.1'
  gem 'newrelic_rpm'
end
