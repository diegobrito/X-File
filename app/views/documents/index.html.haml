#meus_arquivos_lista
  %h1= @files_h1
  .clear
  - if @current_user.documents.count < 1
    %h3{:style => "color:red;"} >> Nenhum documento foi compartilhado até o momento com o seu usuário.
  - else
    %table.tabela_index
      %tr
        %th Title
        %th Description
        %th Created at
        %th File name
        %th File size
        %th
        %th
        %th
        - if action_name == "my_files"
          - @current_user.documents.each do |document|
            %tr
              %td= truncate(document.title, :length => 30)
              %td= truncate(document.description, :length => 60)
              %td= document.created_at.strftime("%d/%m/%Y as %H:%M")
              %td= h truncate(document.file_file_name, :length => 40)
              %td
                = h number_to_human_size(document.file_file_size)
              %td
                %b= link_to "Baixar", document.file.url, :target => "BLANK" if document.file_file_name?
              %td= link_to 'Edit', edit_document_path(document) if is_admin?
              %td= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete if is_admin?
        - else
          - @documents.each do |document|
            %tr
              %td= truncate(document.title, :length => 30)
              %td= truncate(document.description, :length => 60)
              %td= document.created_at.strftime("%d/%m/%Y as %H:%M")
              %td= h truncate(document.file_file_name, :length => 40)
              %td
                = h number_to_human_size(document.file_file_size)
              %td
                %b= link_to "Baixar", document.file.url, :target => "BLANK" if document.file_file_name?
              %td= link_to 'Edit', edit_document_path(document) if is_admin?
              %td= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete if is_admin?
%br
= link_to "New File", new_document_path if is_admin?